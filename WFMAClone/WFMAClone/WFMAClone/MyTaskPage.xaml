<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WFMAClone.MyTaskPage">
    <ContentPage.Content>
        <StackLayout x:Name="currentTask" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="Red" Orientation="Vertical">
       
            <StackLayout Orientation="Horizontal">
                <Button x:Name="navigateButton" VerticalOptions="Center" Text="Previous Page" Clicked="OnNavigateButtonClicked"/>
                <Label Text="{Binding Job.Id}" VerticalOptions="Center" FontSize="Small"></Label>
            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>